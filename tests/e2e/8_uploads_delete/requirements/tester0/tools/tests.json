{
  "tests": [
    {
      "name": "upload",
      "tester": "tester0",
      "method": "POST",
      "url": "http://172.18.0.10:8080/folder/file.tst",
      "body": "file content",
      "delay_before_ms": 0,
      "expected": {
        "status_code": 201
      }
    },
    {
      "name": "download",
      "tester": "tester0",
      "method": "GET",
      "url": "http://172.18.0.10:8080/files/file.tst",
      "delay_before_ms": 0,
      "expected": {
        "status_code": 200,
        "body": "file content"
      }
    },
    {
      "name": "overwriting",
      "tester": "tester0",
      "method": "POST",
      "url": "http://172.18.0.10:8080/folder/file.tst",
      "body": "more file content",
      "delay_before_ms": 0,
      "expected": {
        "status_code": 201
      }
    },
    {
      "name": "download overwritten",
      "tester": "tester0",
      "method": "GET",
      "url": "http://172.18.0.10:8080/files/file.tst",
      "delay_before_ms": 0,
      "expected": {
        "status_code": 200,
        "body": "more file content"
      }
    },
    {
      "name": "upload forbidden",
      "tester": "tester0",
      "method": "POST",
      "url": "http://172.18.0.10:8080/file.tst",
      "body": "file content",
      "delay_before_ms": 0,
      "expected": {
        "status_code": 405
      }
    },
    {
      "name": "upload forbidden, even though target storage directory is correct, should have used a different entry point",
      "tester": "tester0",
      "method": "POST",
      "url": "http://172.18.0.10:8080/upload/file.tst",
      "body": "file content",
      "delay_before_ms": 0,
      "expected": {
        "status_code": 405
      }
    },
    {
      "name": "upload with a subdirectory creation - forbidden",
      "tester": "tester0",
      "method": "POST",
      "url": "http://172.18.0.10:8080/folder/notfound/file.tst",
      "body": "file content",
      "delay_before_ms": 0,
      "expected": {
        "status_code": 400
      }
    },
    {
      "name": "cannot upload without a filename",
      "tester": "tester0",
      "method": "POST",
      "url": "http://172.18.0.10:8080/folder",
      "body": "file content",
      "delay_before_ms": 0,
      "expected": {
        "status_code": 400
      }
    },
    {
      "name": "wrong deletion path",
      "tester": "tester0",
      "method": "DELETE",
      "url": "http://172.18.0.10:8080/folder/file.tst",
      "delay_before_ms": 0,
      "expected": {
        "status_code": 405
      }
    },
    {
      "name": "deleting",
      "tester": "tester0",
      "method": "DELETE",
      "url": "http://172.18.0.10:8080/files/file.tst",
      "delay_before_ms": 0,
      "expected": {
        "status_code": 204
      }
    },
    {
      "name": "download deleted",
      "tester": "tester0",
      "method": "GET",
      "url": "http://172.18.0.10:8080/files/file.tst",
      "delay_before_ms": 0,
      "expected": {
        "status_code": 404
      }
    },
    {
      "name": "shutdown",
      "tester": "tester0",
      "method": "SHUTDOWN",
      "url": "http://172.18.0.10:8080",
      "expected": {
        "status_code": 503,
        "body": "Server is shutting down"
      }
    }
  ]
}
