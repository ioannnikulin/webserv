{
  "tests": [
    {
      "name": "favicon",
      "tester": "tester0",
      "method": "GET",
      "url": "http://172.18.0.10:8080/favicon.ico",
      "delay_before_ms": 0,
      "expected": {
        "status_code": 200
      }
    },
    {
      "name": "index root",
      "tester": "tester0",
      "method": "GET",
      "url": "http://172.18.0.10:8080/",
      "delay_before_ms": 0,
      "expected": {
        "status_code": 200,
        "body": "stub0"
      }
    },
    {
      "name": "index root reverse",
      "tester": "tester0",
      "method": "GET",
      "url": "http://172.18.0.10:8080/../..",
      "delay_before_ms": 0,
      "expected": {
        "status_code": 200,
        "body": "stub0"
      }
    },
    {
      "name": "index sub1",
      "tester": "tester0",
      "method": "GET",
      "url": "http://172.18.0.10:8080/folder1",
      "delay_before_ms": 0,
      "expected": {
        "status_code": 200,
        "body": "stub1"
      }
    },
    {
      "name": "index sub2",
      "tester": "tester0",
      "method": "GET",
      "url": "http://172.18.0.10:8080/folder2",
      "delay_before_ms": 0,
      "expected": {
        "status_code": 200,
        "body": "stub2"
      }
    },
    {
      "name": "index sub2 reverse",
      "tester": "tester0",
      "method": "GET",
      "url": "http://172.18.0.10:8080/folder2/folder3/..",
      "delay_before_ms": 0,
      "expected": {
        "status_code": 200,
        "body": "stub2"
      }
    },
    {
      "name": "index sub3",
      "tester": "tester0",
      "method": "GET",
      "url": "http://172.18.0.10:8080/folder2/folder3",
      "delay_before_ms": 0,
      "expected": {
        "status_code": 200,
        "body": "stub3"
      }
    },
    {
      "name": "invalid request type",
      "tester": "tester0",
      "method": "YOUCANTSEEME",
      "url": "http://172.18.0.10:8080/johncena.pum.purum.puuum",
      "delay_before_ms": 0,
      "expected": {
        "status_code": 405
      }
    },
    {
      "name": "invalid url",
      "tester": "tester0",
      "method": "GET",
      "url": "http://172.18.0.10:8080/ &!@&#\n++",
      "delay_before_ms": 0,
      "expected": {
        "status_code": 404
      }
    },
    {
      "name": "redirect to google",
      "tester": "tester0",
      "method": "GET",
      "url": "http://172.18.0.10:8080/external",
      "delay_before_ms": 0,
      "expected": {
        "status_code": 301,
        "Location": "https://google.com"
      }
    },
    {
      "name": "redirect to folder1",
      "tester": "tester0",
      "method": "GET",
      "url": "http://172.18.0.10:8080/internal",
      "delay_before_ms": 0,
      "expected": {
        "status_code": 301,
        "Location": "http://localhost:8080/folder1"
      }
    },
    {
      "name": "redirect to folder2",
      "tester": "tester0",
      "method": "GET",
      "url": "http://172.18.0.10:8080/relative",
      "delay_before_ms": 0,
      "expected": {
        "status_code": 301,
        "Location": "/folder2"
      }
    },
    {
      "name": "redirect to nowhere",
      "tester": "tester0",
      "method": "GET",
      "url": "http://172.18.0.10:8080/nowhere",
      "delay_before_ms": 0,
      "expected": {
        "status_code": 301,
        "Location": "/doesntexist"
      }
    },
    {
      "name": "preventing prefix route matching on a folder name",
      "tester": "tester0",
      "method": "GET",
      "url": "http://172.18.0.10:8080/folder11",
      "delay_before_ms": 0,
      "expected": {
        "status_code": 404
      }
    },
    {
      "name": "preventing prefix route matching on a redirect",
      "tester": "tester0",
      "method": "GET",
      "url": "http://172.18.0.10:8080/external_",
      "delay_before_ms": 0,
      "expected": {
        "status_code": 404
      }
    },
    {
      "name": "shutdown",
      "tester": "tester0",
      "method": "SHUTDOWN",
      "url": "http://172.18.0.10:8080/external",
      "expected": {
        "status_code": 503,
        "body": "Server is shutting down"
      }
    }
  ]
}
