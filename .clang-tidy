Checks: >-
  -*,
  -modernize-*, # disable, since it mostly targets c++11 and later
  performance-*,
  readability-*,
  misc-*,
  cppcoreguidelines-*,
  bugprone-*,
  clang-analyzer-*
HeaderFilterRegex: '.*'
WarningsAsErrors: ''
CheckOptions:
  - key: readability-function-size.LineThreshold
    value: '80'           # max lines in a function
  - key: readability-function-size.StatementThreshold
    value: '200'          # max statements
  - key: readability-function-size.ParameterThreshold
    value: '6'            # max parameters
  - key: readability-function-size.VariableThreshold
    value: '10'           # max local variables