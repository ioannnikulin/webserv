BasedOnStyle: Google

# four spaces for one indent level
UseTab: Never
IndentWidth: 4
TabWidth: 4
AccessModifierOffset: -4 # spaces before 'private' keyword, -1 by default in Google
InsertNewlineAtEOF: true

# int main() { // < this curly brace attached
# }
BreakBeforeBraces: Attach
AllowShortFunctionsOnASingleLine: false
AllowShortIfStatementsOnASingleLine: false
AllowShortLoopsOnASingleLine: false
BraceWrapping:
  AfterControlStatement: true
  AfterFunction: true
  AfterClass: true
  AfterNamespace: true
  SplitEmptyFunction: true
  SplitEmptyRecord: true
  SplitEmptyNamespace: true
# trying to spread long lists onto multiple lines wherever possible
AlwaysBreakBeforeMultilineStrings: true
BinPackArguments: false
BinPackParameters: false
AllowAllParametersOfDeclarationOnNextLine: false
AllowAllArgumentsOnNextLine: false
PackConstructorInitializers: Never
AlignAfterOpenBracket: BlockIndent

BreakConstructorInitializers: BeforeComma
BreakInheritanceList: BeforeComma

# int* ptr; // not int *ptr
# int& ref; // not int &ref;
PointerAlignment: Left
DerivePointerAlignment: false

ReflowComments: false

# Google + SortIncludes:
# first current file's respective header,
# then C system includes,
# then C++ system includes,
# then project headers;
# all four blocks sorted alphabetically within themselves
SortIncludes: true

# max line length
ColumnLimit: 100
